@using KidShop.Utilities
@model KidShop.Models.tbl_Video
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Thêm mới video</h4>
            </div>
            <div class="card-body">
                <div class="form-validation">
                    <form asp-action="Create" method="post" class="form-valide" novalidate="novalidate">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Title">Tiêu đề</label>
                                <input asp-for="Title" class="form-control" placeholder="Nhập tên tiêu đề" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Describe">Mô tả</label>
                                <input asp-for="Describe" class="form-control" placeholder="Nhập mô tả" />
                                <span asp-validation-for="Describe" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Duration">Thời lượng</label>
                                <input asp-for="Duration" class="form-control" placeholder="Nhập thời lượng video" />
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Link">Đường dẫn</label>
                                <input asp-for="Link" class="form-control" placeholder="Nhập đường dẫn video" />
                                <span asp-validation-for="Link" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Category_VideoID">Loại video</label>
                                <select asp-for="Category_VideoID" asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))" class="form-control"></select>
                            </div>

                           
                        </div>

                        <div class="form-group row">
                            <label class="control-label">Hình ảnh</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <button class="btn btn-success" type="button" onclick="openDialogImage()">Choose a pic</button>
                                </div>
                                <input type="text" class="form-control" asp-for="Image" id="file_input1" aria-describedby="button-addon2">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="mb-0 mr-2">Video nổi bật</label>
                                @Html.CheckBox("IsFeatured", false, new { @class = "mr-2" })
                                <span>Cho phép hiển thị</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="mb-0 mr-2">Hiển thị</label>
                                @Html.CheckBox("IsActive", false, new { @class = "mr-2" })
                                <span>Cho phép hiển thị</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-file-plus-fill"></i> Lưu
                                </button>
                                <a asp-controller="Video" asp-action="Index" class="btn btn-warning ml-2">Quay lại</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section HeadContent {
    @{
        var summerNote = new KidShop.Areas.Admin.Models.SummerNote("#Describe");
        <partial name="_SummerNote" model="summerNote" />
    }
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




