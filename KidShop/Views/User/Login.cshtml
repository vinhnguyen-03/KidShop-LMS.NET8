@using KidShop.Utilities
@using KidShop.ViewModel
@using KidShop.ViewModel.User
@model LoginVM
@{
    ViewData["Title"] = "Đăng nhập";
}

<section class="blog-details-hero set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog__details__hero__text">
                    <h1>Đăng nhập</h1>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 order-md-1 order-1">

                <div class="card p-4 shadow rounded-3 mx-auto mt-4" style="max-width: 450px;">
                    <h4 class="text-center mb-4">Đăng nhập</h4>

                    @* Hiển thị lỗi tổng quát *@
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <form asp-action="Login" asp-controller="User" method="post">
                        <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label"></label>
                            <input asp-for="UserName" class="form-control" placeholder="Nhập tên đăng nhập" />
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Passwords" class="form-label"></label>
                            <input asp-for="Passwords" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Passwords" class="text-danger small"></span>
                        </div>

                        <!-- Quên mật khẩu -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <a href="@Url.Action("ForgotPassword", "User")" class="text-decoration-none small text-primary">
                                Quên mật khẩu?
                            </a>
                        </div>

                        <!-- Nút đăng nhập -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">Đăng nhập</button>
                        </div>

                        <!-- Chưa có tài khoản -->
                        <div class="text-center">
                            <span class="small">Chưa có tài khoản? </span>
                            <a asp-controller="User" asp-action="Register" class="text-decoration-none text-success">Đăng ký ngay</a>
                        </div>
                    </form>
                </div>
 
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

