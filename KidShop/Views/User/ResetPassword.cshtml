@using KidShop.ViewModel.User
@model ResetPasswordVM
<section class="blog-details spad">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8">
                <div class="card p-4 shadow-sm border-0">
                    <h3 class="text-center mb-3">Đặt mật khẩu mới</h3>
                    <form method="post" asp-action="ResetPassword">
                        <input type="hidden" asp-for="Email" value="@TempData["Email"]" />
                        <div class="form-group mb-3">
                            <label>Mật khẩu mới</label>
                            <input asp-for="NewPassword" type="password" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label>Nhập lại mật khẩu</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Cập nhật mật khẩu</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>