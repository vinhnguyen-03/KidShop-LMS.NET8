@using KidShop.Utilities
@model KidShop.Models.tbl_CourseVideo
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Sửa băng hình khoá học</h4>
            </div>
            <div class="card-body">
                <div class="form-validation">
                    <form asp-action="Edit" method="post" class="form-valide" novalidate="novalidate">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <input asp-for="CourseVideoID" type="hidden" />

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Title">Tên băng hình khoá học</label>
                                <input asp-for="Title" class="form-control" placeholder="Nhập tên băng hình khoá học" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Duration">Thời lượng </label>
                                <input asp-for="Duration" class="form-control" placeholder="Nhập Thời lượng băng hình khoá học" />
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="OrderIndex">Thứ tự băng hình khoá học</label>
                                <input asp-for="OrderIndex" class="form-control" placeholder="Nhập thứ tự băng hình khoá học" />
                                <span asp-validation-for="OrderIndex" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CourseID">Tên khoá học</label>
                                <select asp-for="CourseID" asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))" class="form-control"></select>
                            </div>

                        </div>

                        <div class="form-group row">
                            <label class="control-label">Đường dẫn băng hình</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <button class="btn btn-success" type="button" onclick="openDialogImage()">Chọn đường dẫn</button>
                                </div>
                                <input type="text" class="form-control" asp-for="Link" id="file_input1" aria-describedby="button-addon2">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="mb-0 mr-2">Học thử</label>
                                @Html.CheckBox("IsPreview", Model.IsPreview, new { @class = "mr-2" })
                                <span>Cho phép học thử</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="mb-0 mr-2">Hiển thị</label>
                                @Html.CheckBox("IsActive", Model.IsActive, new { @class = "mr-2" })
                                <span>Cho phép hiển thị</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-file-plus-fill"></i> Lưu
                                </button>
                                <a asp-controller="CourseVideo" asp-action="Index" class="btn btn-warning ml-2">Quay lại</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section HeadContent {
    @{
        var summerNote = new KidShop.Areas.Admin.Models.SummerNote("#Contents");
        <partial name="_SummerNote" model="summerNote" />
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

