@model KidShop.Models.tbl_ProductImage
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Xóa hình sản phẩm</h2>
            </div>
            <div class="card-body">
                <form asp-action="Delete" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="ProductImageID" class="control-label">Mã hình ảnh</label>
                            <input asp-for="ProductImageID" class="form-control mb-3" disabled />
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="ImageUrl" class="control-label">Hình ảnh</label>

                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div>
                                    <img src="@Url.Content(Model.ImageUrl)"
                                         alt="Ảnh sản phẩm"
                                         style="max-width:150px; max-height:100px; border-radius:6px; border:1px solid #ccc;" />
                                </div>
                            }
                            else
                            {
                                <div>
                                    <span class="text-muted">Không có hình</span>
                                </div>
                            }
                        </div>

                    </div>
                    <input type="hidden" asp-for="ProductImageID" />
                    <div class="form-group mt-3">
                        <a class="btn btn-lg btn-warning p-2 mr-3" href="javascript:history.back()">
                            <i class="bi bi-arrow-left-circle"></i> Quay Lại
                        </a>
                        <button type="submit" class="btn btn-lg btn-danger p-2">
                            <i class="bi bi-trash-fill"></i> Xóa ảnh sản phẩm
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
