@using KidShop.Models;
@model List<InventoryTransaction>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">
        <div class="pagetitle">
            <h2>Lịch sử kho hàng</h2>
        </div>
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive-md">
                            <thead>
                                <tr>
                                    <th>Ngày</th>
                                    <th>Sản phẩm</th>
                                    <th>Thay đổi</th>
                                    <th>Lý do</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var t in Model)
                                {
                                    <tr>
                                        <td>@t.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@t.Product.ProductName</td>
                                        <td>
                                            @if (t.QuantityChange > 0)
                                            {
                                                <span style="color:green">+@t.QuantityChange</span>
                                            }
                                            else
                                            {

                                                <span style="color:red">@t.QuantityChange</span>
                                            }
                                        </td>
                                        <td>@t.Reason</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

