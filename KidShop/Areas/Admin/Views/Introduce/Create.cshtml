@model KidShop.Models.tbl_Introduce
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Thêm mới phần giới thiệu</h4>
            </div>
            <div class="card-body">
                <div class="form-validation">
                    <form asp-action="Create" method="post" class="form-valide" novalidate="novalidate">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Title">Tên tiêu đề giới thiệu</label>
                                <input asp-for="Title" class="form-control" placeholder="Nhập tên tiêu đề" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Description">Mô tả</label>
                                <input asp-for="Description" class="form-control" placeholder="Nhập mô tả" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Icon">Icon</label>
                                <input asp-for="Icon" class="form-control" placeholder="Nhập Icon" />
                                <span asp-validation-for="Icon" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Background_color">Mã màu</label>
                                <input asp-for="Background_color" class="form-control" placeholder="Nhập Mã màu" />
                                <span asp-validation-for="Background_color" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="mb-0 mr-2">Hiển thị</label>
                                @Html.CheckBox("IsActive", false, new { @class = "mr-2" })
                                <span>Cho phép hiển thị</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-file-plus-fill"></i> Lưu
                                </button>
                                <a asp-controller="Introduce" asp-action="Index" class="btn btn-warning ml-2">Quay lại</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}






