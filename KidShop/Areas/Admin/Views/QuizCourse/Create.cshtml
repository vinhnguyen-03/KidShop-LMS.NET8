@using KidShop.Utilities
@model KidShop.Models.tbl_Quiz
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Thêm mới câu hỏi khoá học</h4>
            </div>
            <div class="card-body">
                <div class="form-validation">
                    <form asp-action="Create" method="post" class="form-valide" novalidate="novalidate">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group row">
                            <div class="col-md-6">
                                <label asp-for="CourseVideoID">Tiêu đề bài học đặt câu hỏi</label>
                                <select asp-for="CourseVideoID" asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))" class="form-control"></select>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Question">Câu hỏi của bài</label>
                                <input asp-for="Question" class="form-control" placeholder="Nhập câu hỏi cho bài khoá học" />
                                <span asp-validation-for="Question" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Options">Các phương án A|B|C|D</label>
                                <input asp-for="Options" class="form-control"  placeholder="Nhập phương án ABCD" />
                                <span asp-validation-for="Options" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Answer">Đáp án đúng</label>
                                <input asp-for="Answer" class="form-control" placeholder="Nhập đáp án đúng" />
                                <span asp-validation-for="Answer" class="text-danger"></span>
                            </div>
 
                        </div>
 
                        <div class="form-group row">
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="mb-0 mr-2">Hiển thị</label>
                                @Html.CheckBox("IsActive", false, new { @class = "mr-2" })
                                <span>Cho phép hiển thị</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-file-plus-fill"></i> Lưu
                                </button>
                                <a asp-controller="QuizCourse" asp-action="Index" class="btn btn-warning ml-2">Quay lại</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section HeadContent {
    @{
        var summerNote = new KidShop.Areas.Admin.Models.SummerNote("#O");
        <partial name="_SummerNote" model="summerNote" />
    }
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





