@model KidShop.Models.tbl_Banner
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Sửa phần Banner</h4>
            </div>
            <div class="card-body">
                <div class="form-validation">
                    <form asp-action="Edit" method="post" class="form-valide" novalidate="novalidate">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <input asp-for="BannerID" type="hidden" />

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Slogan">Tên Slogan</label>
                                <input asp-for="Slogan" class="form-control" placeholder="Nhập tên Slogan" />
                                <span asp-validation-for="Slogan" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Tagline">Tagline</label>
                                <input asp-for="Tagline" class="form-control" placeholder="Nhập Tagline" />
                                <span asp-validation-for="Tagline" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Link">Đường dẫn</label>
                                <input asp-for="Link" class="form-control" placeholder="Nhập dường dẫn" />
                                <span asp-validation-for="Link" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label">Hình ảnh</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <button class="btn btn-success" type="button" onclick="openDialogImage()">Choose a pic</button>
                                </div>
                                <input type="text" class="form-control" asp-for="Image" id="file_input1" aria-describedby="button-addon2">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="mb-0 mr-2">Hiển thị</label>
                                @Html.CheckBox("IsActive", Model.IsActive, new { @class = "mr-2" })
                                <span>Cho phép hiển thị</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-file-plus-fill"></i> Lưu
                                </button>
                                <a asp-controller="Banner" asp-action="Index" class="btn btn-warning ml-2">Quay lại</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section HeadContent {
    @{
        var summerNote = new KidShop.Areas.Admin.Models.SummerNote("#N");
        <partial name="_SummerNote" model="summerNote" />
    }
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
