@using KidShop.Utilities
@model IEnumerable<KidShop.Models.tbl_SavedBlog>

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>💾 Danh sách bài viết đã lưu</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                        <span>Bài viết đã lưu</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Saved Blogs Table Section Begin -->
<section class="saved-blogs spad">
    <div class="container">
        @if (!Model.Any())
        {
            <p class="text-center text-muted">Bạn chưa lưu bài viết nào.</p>
        }
        else
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Tiêu đề bài viết</th>
                        <th>Ngày đăng</th>
                        <th class="text-center">Xem chi tiết</th>
                        <th class="text-center">Xóa khỏi danh sách lưu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var saved in Model)
                    {
                        <tr>
                            <td>@saved.Blog?.Title</td>
                            <td>@saved.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@saved.BlogID" class="btn btn-sm btn-primary">
                                    <i class="fa fa-eye"></i> Xem
                                </a>
                            </td>
                            <td class="text-center">
                                <form asp-controller="SaveBlog" asp-action="Remove" method="post" class="d-inline">
                                    <input type="hidden" name="blogId" value="@saved.BlogID" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa bài viết này khỏi danh sách lưu?');">
                                        <i class="fa fa-times"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</section>
<!-- Saved Blogs Table Section End -->