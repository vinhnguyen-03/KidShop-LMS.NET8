@model KidShop.Models.tbl_Blog
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Đăng tải bài viết</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                        <span>Đăng bài viết</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">

                <h2 class="mb-4 text-center">📝 Đăng bài viết mới</h2>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                <form asp-action="Create" method="post">
                    <div class="form-group mb-3">
                        <label>Tiêu đề bài viết</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label>Tóm tắt</label>
                        <textarea asp-for="Abstract" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="form-group mb-3">
                        <label>Nội dung chi tiết</label>
                        <textarea asp-for="Contents" class="form-control" id="Contents"></textarea>
                    </div>

                    <div class="form-group mb-3">
                        <label>Ảnh đại diện bài viết</label>
                        <input asp-for="Image" class="form-control" type="text" placeholder="URL hình ảnh" />
                    </div>

                    <div class="text-end">
                        <a asp-action="MyBlogs" class="btn btn-secondary me-2">⬅ Quay lại</a>
                        <button type="submit" class="btn btn-primary">📤 Gửi bài viết</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
 
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('#Contents').summernote({
                height: 300,
                placeholder: 'Nhập nội dung bài viết...',
                callbacks: {
                    onImageUpload: function(files) {
                        // ✅ Xử lý upload ảnh lên server nếu muốn
                        console.log(files);
                    }
                }
            });
        });
    </script>
}