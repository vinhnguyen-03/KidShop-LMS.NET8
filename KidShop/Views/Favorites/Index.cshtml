@using KidShop.Utilities
@model IEnumerable<KidShop.Models.tbl_Favorites>
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>💖 Danh sách yêu thích</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                        <span>Yêu thích</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Favorites Section Begin -->
<section class="favorites spad">
    <div class="container">
       

        @if (!Model.Any())
        {
            <p class="text-center text-muted">Bạn chưa có sản phẩm nào trong danh sách yêu thích.</p>
        }
        else
        {
            <div class="row">
                @foreach (var fav in Model)
                {
                    string url = Functions.TitleSlugGeneration("sanpham", @fav.Product.ProductName ?? "no-title", @fav.ProductID);
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="@fav.Product.Image">
                                <ul class="product__item__pic__hover">
                                    <li>
                                        <form asp-controller="Favorites" asp-action="Remove" method="post" class="d-inline">
                                            <input type="hidden" name="productId" value="@fav.ProductID" />
                                            <button type="submit" class="btn btn-link p-0 text-danger">
                                                <i class="fa fa-times"></i>
                                            </button>
                                        </form>
                                    </li>

                                    <li>
                                        <a href="/@url">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="product__item__text">
                                <h6>@fav.Product.ProductName</h6>
                                <h5>@String.Format("{0:N0} đ", fav.Product.PriceSale ?? fav.Product.Price)</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
<!-- Favorites Section End -->
 