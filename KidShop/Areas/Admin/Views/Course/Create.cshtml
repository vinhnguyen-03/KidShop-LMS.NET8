@using KidShop.Utilities
@model KidShop.Models.tbl_Course
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Thêm mới khoá học</h4>
            </div>
            <div class="card-body">
                <div class="form-validation">
                    <form asp-action="Create" method="post" class="form-valide" novalidate="novalidate">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="CourseName">Tên khoá học</label>
                                <input asp-for="CourseName" class="form-control" placeholder="Nhập tên khoá học" />
                                <span asp-validation-for="CourseName" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Describe">Mô tả</label>
                                <input asp-for="Describe" class="form-control" placeholder="Nhập mô tả" />
                                <span asp-validation-for="Describe" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Contents">Nội dung chi tiết</label>
                                <textarea asp-for="Contents" class="form-control" rows="6" placeholder="Nhập nội dung"></textarea>
                                <span asp-validation-for="Contents" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Price">Giá khoá học</label>
                                <input asp-for="Price" class="form-control" placeholder="Nhập giá khoá học" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PriceSale">Giảm giá khoá học</label>
                                <input asp-for="PriceSale" class="form-control" placeholder="Nhập giá khoá học" />
                                <span asp-validation-for="PriceSale" class="text-danger"></span>
                            </div>
         
                            <div class="col-md-6">
                                <label asp-for="LecturerID">Tên giảng viên</label>
                                <select asp-for="LecturerID" asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))" class="form-control"></select>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Tag"> Tên nhãn </label>
                                <input asp-for="Tag" class="form-control" placeholder="Nhập tên nhãn " />
                                <span asp-validation-for="Tag" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label">Hình ảnh</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <button class="btn btn-success" type="button" onclick="openDialogImage()">Choose a pic</button>
                                </div>
                                <input type="text" class="form-control" asp-for="Image" id="file_input1" aria-describedby="button-addon2">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="mb-0 mr-2">Hiển thị</label>
                                @Html.CheckBox("IsActive", false, new { @class = "mr-2" })
                                <span>Cho phép hiển thị</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-file-plus-fill"></i> Lưu
                                </button>
                                <a asp-controller="Course" asp-action="Index" class="btn btn-warning ml-2">Quay lại</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section HeadContent {
    @{
        var summerNote = new KidShop.Areas.Admin.Models.SummerNote("#Contents");
        <partial name="_SummerNote" model="summerNote" />
    }
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





