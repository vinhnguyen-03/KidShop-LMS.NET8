@using KidShop.Models
@model tbl_CourseVideo
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Xem thử video</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Course" asp-action="Index">Trang chủ</a>
                        <span>@Model.Title</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<section class="course-list spad">
    <div class="container">
        <div class="row justify-content-center">
            <!-- căn giữa hàng -->
            <div class="col-lg-10">
                <!-- giới hạn chiều ngang -->
                <div class="card shadow-sm p-3">
                    <div id="previewVideoContainer" class="d-flex justify-content-center">
                        @if (Model.IsYouTube && !string.IsNullOrEmpty(Model.Link))
                        {
                            <iframe style="width:100%; height:600px; max-width:100%;"
                                    src="@Model.Link.Replace("watch?v=", "embed/")"
                                    frameborder="0"
                                    allowfullscreen></iframe>
                        }
                        else if (!string.IsNullOrEmpty(Model.Link))
                        {
                            <video style="width:100%; height:600px; max-width:100%;"
                                   controls>
                                <source src="@Model.Link" type="video/mp4">
                                Trình duyệt không hỗ trợ video.
                            </video>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>