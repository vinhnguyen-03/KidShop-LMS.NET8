@model IList<tbl_Introduce>
@using KidShop.Models;
@using KidShop.Utilities;
<!-- Introduction Section -->
<section style="background-color: #ffff; padding: 80px 0;">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-lg-8">
                <h1 style="color: #2d3748; font-size: 3rem; font-weight: 700; margin-bottom: 1.5rem;">
                    Đồng Hành Cùng Con Khôn Lớn
                </h1>
                <p style="color: #4a5568; font-size: 1.2rem; line-height: 1.7;">
                    Phát Hiện Sớm & Can Thiệp Toàn Diện cho Trẻ Chậm Nói, Tự Kỷ.
                </p>
            </div>
        </div>

        <div class="row g-4">
            @foreach (var item in Model){
            <div class="col-md-4">
                <div style="background: @item.Background_color; border-radius: 15px; padding: 2rem; text-align: center; transition: transform 0.3s ease;" class="shadow"
                     onmouseover="this.style.transform='translateY(-5px)'"
                     onmouseout="this.style.transform='translateY(0)'">
                    <div style="width: 70px; height: 70px; background: white; border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="@item.Icon" style="font-size: 1.8rem; color: #7b4dd8;"></i>
                    </div>
                    <h3 style="color: white; font-weight: 600; margin-bottom: 1rem;">@item.Title</h3>
                    <p style="color: rgba(255,255,255,0.9); line-height: 1.6; margin: 0;">@item.Description</p>
                </div>
            </div>
 
            }
        </div>
    </div>
</section>
<!-- End of Introduction Section -->
