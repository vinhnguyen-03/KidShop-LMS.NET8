@model IList<tbl_Video>
@using KidShop.Models;
@using KidShop.Utilities;

<!-- Video Section Begin -->
<section class="video spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Các video nổi bật </h2>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Video Item -->
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div style="background: #f9f9f9; border-radius: 10px; overflow: hidden;">
                        <iframe width="100" style="width:100%;" height="200" src="@item.Link"
                                frameborder="0" allowfullscreen></iframe>
                        <div style="padding: 15px;">
                            <h5 style="font-weight: 600;"><a asp-controller="Video" asp-action="VideoDetail" asp-route-id="@item.VideoID"> @item.Title </a></h5>
                            <p style="color: #555;">⏱ @item.DurationDisplay</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Video Section End -->
