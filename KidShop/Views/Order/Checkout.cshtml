@using KidShop.ViewModel.Product
@model CheckoutVM
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Thanh toán đơn hàng</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                        <span>Đơn hàng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Chi tiết đơn hàng</h4>
            <form asp-action="Checkout" method="post">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="checkout__input">
                            <p>Họ và tên<span>*</span></p>
                            <input asp-for="ReceiverName" class="form-control" required />
                            <span asp-validation-for="ReceiverName" class="text-danger"></span>
                        </div>

                        <div class="checkout__input">
                            <p>Địa chỉ<span>*</span></p>
                            <input asp-for="Address" class="form-control" required />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    <input asp-for="Phone" class="form-control" required />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input asp-for="Email" class="form-control" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="checkout__input">
                            <p>Ghi chú</p>
                            <input asp-for="Note" class="form-control" placeholder="Ghi chú khi giao hàng..." />
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Đơn hàng của bạn</h4>
                            <div class="checkout__order__products">
                                Sản phẩm <span>Tổng</span>
                            </div>
                            <ul>
                                @foreach (var item in Model.Items)
                                {
                                    <li>
                                        @item.ProductName
                                        <span>@item.SubTotal.ToString("N0") ₫</span>
                                    </li>
                                }
                            </ul>

                            <div class="checkout__order__total">
                                Tổng cộng <span>@Model.TotalAmount.ToString("N0") ₫</span>
                            </div>
                            <div class="checkout__order__subtotal">
                                Tạm tính <span>@Model.Items.Sum(i => i.SubTotal).ToString("N0") ₫</span>
                            </div>

                            <div class="checkout__input__checkbox">
                                <label>
                                    Thanh toán khi nhận hàng (COD)
                                    <input type="radio" asp-for="PaymentMethod" value="COD" checked />
                                    <span class="checkmark"></span>
                                </label>
                            </div>

                            <div class="checkout__input__checkbox">
                                <label>
                                    Chuyển khoản ngân hàng
                                    <input type="radio" asp-for="PaymentMethod" value="Bank" />
                                    <span class="checkmark"></span>
                                </label>
                            </div>

                            <button type="submit" class="site-btn">Đặt hàng</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->