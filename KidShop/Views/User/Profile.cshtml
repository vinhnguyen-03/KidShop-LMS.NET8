@model ProfileVM
@using KidShop.Utilities
@using KidShop.ViewModel
@using KidShop.ViewModel.User

<section class="blog-details-hero set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog__details__hero__text">
                    <h1>Hồ sơ cá nhân</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="spad">
    <div class="container">
        <h3 class="text-center mb-4">👤 Thông tin cá nhân</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="UpdateProfile" asp-controller="User" method="post">
           
            @Html.AntiForgeryToken()
          
            <div class="form-group mb-3">
                <label>Họ tên</label>
                <input asp-for="FullName" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label>Email</label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <button type="submit" class="btn btn-primary w-100">💾 Lưu thay đổi</button>
        </form>

        <div class="text-center mt-4">
            <a asp-action="ChangePassword" asp-controller="User" class="btn btn-outline-secondary">Đổi mật khẩu</a>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}