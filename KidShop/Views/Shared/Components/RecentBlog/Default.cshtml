@model IList<tbl_Blog>
@using KidShop.Models;
@using KidShop.Utilities;

<!-- Blog Section Begin -->
<section class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>Bài viết nổi bật</h2>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="@item.Image" alt="@item.Title" style="width:370px; height:266px; object-fit:cover; border-radius:6px;" />
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i> @item.CreatedDate</li>
                                <li><i class="fa fa-comment-o"></i> 5</li>
                            </ul>
                            <h5><a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@item.BlogID">@item.Title</a></h5>
                            <p>@item.Abstract </p>
                        </div>
                    </div>
                </div>
            }
          
        </div>
    </div>
</section>
<!-- Blog Section End -->