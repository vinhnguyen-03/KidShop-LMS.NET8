@model IList<tbl_Banner>
@using KidShop.Models;
@using KidShop.Utilities;
<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">              
                @foreach(var item in Model)
                {
                    <div class="hero__item" style="background-image: url('@item.Image');">
                        <div class="hero__text">
                            <h1>@Html.Raw(item.Slogan)</h1>
                            <p>@Html.Raw(item.Tagline)</p>
                            <a href="/@item.Link" class="primary-btn">Khám phá</a>
                        </div>
                    </div>
                }    
            </div>
        </div>
    </div>
</section>