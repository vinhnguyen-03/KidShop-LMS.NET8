@using KidShop.Models;
@model IList<tbl_Banner>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">
        <div class="pagetitle">
            <h2>Danh Sách Banner</h2>
        </div>

        <p>
            <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Banner" asp-action="Create">
                <i class="bi bi-file-earmark-text me-1"></i>Thêm Banner
            </a>
        </p>
        <div class="col-lg-12">
            <div class="card">

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive-md">
                            <thead>
                                <tr>
                                    <th style="width:50px;">
                                        <div class="custom-control custom-checkbox checkbox-success check-lg mr-3">
                                            <input type="checkbox" class="custom-control-input" id="checkAll">
                                            <label class="custom-control-label" for="checkAll"></label>
                                        </div>
                                    </th>
                                    <th>STT</th>
                                    <th>Slogan</th>
                                    <th>TagLine</th>
                                    <th>Image</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var count = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text center">
                                            <div class="custom-control custom-checkbox checkbox-success check-lg mr-3">
                                                <input type="checkbox" class="custom-control-input" id="customCheckBox_@item.BannerID">
                                                <label class="custom-control-label" for="customCheckBox_@item.BannerID"></label>
                                            </div>
                                        </td>
                                        <td class="text center"><strong>@count</strong></td>

                                        <td>@item.Slogan</td>
                                        <td>@item.Tagline</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Image))
                                            {
                                                <img src="@Url.Content(item.Image)" alt="Image" style="max-width:100px; max-height:60px;" />
                                            }
                                            else
                                            {
                                                <span>Không có hình</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex">
                                                <a asp-area="Admin" asp-controller="Banner" asp-action="Edit"
                                                   asp-route-id="@item.BannerID"
                                                   class="btn btn-primary shadow btn-xs sharp mr-1">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                <a asp-area="Admin" asp-controller="Banner" asp-action="Delete"
                                                   asp-route-id="@item.BannerID"
                                                   class="btn btn-danger shadow btn-xs sharp">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
