@model KidShop.Models.tbl_CategoryVideo
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Sửa phần phân loại video</h4>
            </div>
            <div class="card-body">
                <div class="form-validation">
                    <form asp-action="Edit" method="post" class="form-valide" novalidate="novalidate">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <input asp-for="Category_VideoID" type="hidden" />

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Title">Tên phân loại video</label>
                                <input asp-for="Title" class="form-control" placeholder="Nhập tên phân loại" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Describe">Mô tả</label>
                                <input asp-for="Describe" class="form-control" placeholder="Nhập mô tả" />
                                <span asp-validation-for="Describe" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Link">Đường dẫn</label>
                                <input asp-for="Link" class="form-control" placeholder="Nhập dường dẫn" />
                                <span asp-validation-for="Link" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="mb-0 mr-2">Hiển thị</label>
                                @Html.CheckBox("IsActive", Model.IsActive, new { @class = "mr-2" })
                                <span>Cho phép hiển thị</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-file-plus-fill"></i> Lưu
                                </button>
                                <a asp-controller="CategoryVideo" asp-action="Index" class="btn btn-warning ml-2">Quay lại</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section HeadContent {
    @{
        var summerNote = new KidShop.Areas.Admin.Models.SummerNote("#N");
        <partial name="_SummerNote" model="summerNote" />
    }
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

